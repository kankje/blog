<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}{{ blog_name }}{% endblock %}</title>
    <meta name="description" content="{{ blog_description }}">
    <meta name="author" content="{{ blog_author }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="{{ link('assets', 'css', 'bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ link('assets', 'css', 'style.css') }}">
  </head>
  <body>
    <main class="container">
      <header class="center">
        <a href="{{ link() }}">
          <h1 class="blog-title">{{ blog_name }}</h1>
          <p class="blog-description">{{ blog_description }}</p>
        </a>
        {% if logged_in %}
          <a class="action" href="{{ link('settings') }}">
            <span class="glyphicon glyphicon-wrench"></span> Settings
          </a>
          <a class="action" href="{{ link('compose') }}">
            <span class="glyphicon glyphicon-pencil"></span> New post
          </a>
          {% if post %}
            <a class="action" href="{{ link('compose', post.id) }}">
              <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
            <a class="action" href="{{ link('delete', post.id) }}">
              <span class="glyphicon glyphicon-trash"></span> Delete
            </a>
          {% endif %}
          <a class="action" href="{{ link('logout') }}">
            <span class="glyphicon glyphicon-log-out"></span> Log out
          </a>
        {% endif %}
      </header>
      {% block content %}{% endblock %}
    </main>
    {% if blog_author %}
      <footer class="center">
        <div id="footer-fader"></div>
        <div class="container">
          <p>Copyright &copy; {{ blog_author }}</p>
        </div>
      </footer>
    {% endif %}
  </body>
</html>
