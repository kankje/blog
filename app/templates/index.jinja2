{% extends 'layout/layout.jinja2' %}

{% block content %}
  {% for post in posts %}
    <article>
      <a href="{{ url_for('regular.post', post_id=post.id, link_text=post.link_text) }}">
        <h2 class="post-title">{{ post.title | safe }}</h2>
        <p class="post-date">{{ post.creation_date.strftime('%A, %B %e. %Y') }}</p>
      </a>
    </article>
  {% endfor %}

  {% if page_num > 1 %}
    <a class="action prev-page" href="{{ url_for('regular.page', page_num=page_num - 1) }}">
      <i class="fa fa-chevron-left"></i> Previous page
    </a>
  {% endif %}

  {% if page_num < page_count %}
    <a class="action next-page" href="{{ url_for('regular.page', page_num=page_num + 1) }}">
      Next page <i class="fa fa-chevron-right"></i>
    </a>
  {% endif %}

  <div style="clear:both"></div>
{% endblock %}
